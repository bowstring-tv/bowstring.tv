<script>
    const dropContainer = document.querySelector('.file-field-area')
    const fileInput = document.querySelector('.file-field input')

    fileInput.onchange = function(evt) {
        dropContainer.querySelector('.file-field-chosen').style.display = 'block'
        dropContainer.querySelector('.file-field-chosen').innerHTML = `Chosen file: ${fileInput.files[0].name}`
    }

    dropContainer.ondragover = dropContainer.ondragenter = function(evt) {
        evt.stopPropagation()
        evt.preventDefault();
    };

    dropContainer.ondrop = function(evt) {
        fileInput.files = evt.dataTransfer.files;

        dropContainer.querySelector('.file-field-chosen').style.display = 'block'
        dropContainer.querySelector('.file-field-chosen').innerHTML = `Chosen file: ${evt.dataTransfer.files[0].name}`
        evt.stopPropagation()
        evt.preventDefault();
    };
</script>